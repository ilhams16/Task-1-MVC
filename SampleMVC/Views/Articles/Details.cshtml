@model MyWebFormApp.BLL.DTOs.ArticleDTO;

<div class="row">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Detail Article</h1>
	</div>

	<div class="col-lg-12">
		<!-- Basic Card Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Detail Article</h6>
			</div>
			<div class="card-body">
				<div class="d-block p-3">
					<h2 class="m-3 text-center">
						<strong>
							@Model.Title
						</strong>
					</h2>
					<p class="m-3 my-5">
						@Model.Details
					</p>
					<div class="d-flex justify-content-between">
						<p class="mx-3">Approved : @(Model.IsApproved ? "Yes" : "No")</p>
						<p class="mx-3">Published : @Model.PublishDate</p>
					</div>
					<div class="card mx-3 my-1">
						<img height="500" src="~/Pics/@Model.Pic" alt="Article Image">
					</div>
				</div>

			</div>
		</div>

	</div>

</div>
